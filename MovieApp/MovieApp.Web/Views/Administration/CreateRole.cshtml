@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create New Role";
}

    <h1>Create New Role</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.RoleName"></label>
                <input asp-for="@Model.RoleName" class="form-control" />
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button style="width:auto" type="submit" class="btn btn-primary">Create Role</button>
            </div>
        </form>
    </div>
</div>